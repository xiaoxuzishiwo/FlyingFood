::-webkit-scrollbar{width: 0;height: 0;color: transparent;}
page{
  width: 100%;
  height: 100%;
}
.body{
  padding:25rpx;
}
.cardFigure{
  width: 95%;
  height:370rpx;
  margin:0 auto;
  /* margin-top:30rpx; */
  border-radius: 10rpx;
  background: #ccc;
}
.cardFigure image{
  width: 100%;
  height:370rpx;
}
.secondRow{
  width: 95%;
  margin:0 auto;
  height: 82rpx;
  margin-top: 30rpx;
}
.secondRow image{
  height: 82rpx;
  width: 82rpx;
  border-radius: 50%;
  float: left;
}
.secondRow text{
  width: 95%;
  margin:0 auto;  
  margin-left: 22rpx;
  line-height: 82rpx;
  font-size: 30rpx;
  font-family: "黑体";
}

textarea {
  margin-top: 20rpx;
  background: #eeffff;
  border-radius: 10rpx;
  width: 88%;
  margin:0 auto;
  padding: 30rpx;
  font-size: 35rpx;
  font-family: "楷体";
}
.bottom3{
   margin-top: 70rpx;
}
